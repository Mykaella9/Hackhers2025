datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") // e.g. file:./prisma/dev.db
}

generator client {
  provider = "prisma-client-js"
}

model Manager {
  id        Int    @id
  firstName String
  lastName  String

  roles Role[] // 1:N -> each Role has one Manager
  users User[] // 1:N -> each User has one Manager (optional FK on User)
}

model Role {
  id   Int    @id
  name String

  // Role -> Manager (many roles per one manager)
  managerId Int
  manager   Manager @relation(fields: [managerId], references: [id])

  // Entitlements attached to this role (M:N)
  entitlements Entitlement[] @relation("RoleEntitlements")
}

model User {
  id         Int    @id
  firstName  String
  lastName   String
  computerId Int

  // User -> Manager (many users per one manager)
  managerId Int?
  manager   Manager? @relation(fields: [managerId], references: [id])

  // Entitlements directly on the user (M:N)
  entitlements Entitlement[] @relation("UserEntitlements")
}

model Entitlement {
  id    Int    @id
  name  String
  type  String
  level Int

  // Back-refs for the two separate M:N relations
  roles Role[] @relation("RoleEntitlements")
  users User[] @relation("UserEntitlements")
}
